set -e

source /var/vcap/packages/golang-1.13-linux/bosh/compile.env

mkdir ../src && cp -a * ../src/ && mv ../src ./src
mkdir $BOSH_INSTALL_TARGET/bin

go build -o $BOSH_INSTALL_TARGET/bin/nfsbroker src/code.cloudfoundry.org/nfsbroker/*.go

cp code.cloudfoundry.org/nfsbroker/Procfile ${BOSH_INSTALL_TARGET}

